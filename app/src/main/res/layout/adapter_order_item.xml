<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.waitty.kitchen.adapter.OrderHistoryItemAdapter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_1sdp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:textColor="@color/colorNextWelcome"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/p_semibold"
                android:maxLines="2"
                android:layout_toStartOf="@+id/layLinQuantity"
                android:layout_marginEnd="@dimen/_5sdp"/>

            <LinearLayout
                android:id="@+id/layLinQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:gravity="center"
                    android:textColor="@color/colorNextWelcome"
                    android:textSize="@dimen/_8ssp"
                    android:fontFamily="@font/p_medium"
                    android:background="@drawable/round_square_count"/>

                <LinearLayout
                    android:id="@+id/layLinDone"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@drawable/round_done"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_done"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_7ssp"
                        android:fontFamily="@font/p_regular"/>

                    <ImageView
                        android:id="@+id/imvDone"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:src="@mipmap/done_icon"
                        android:tint="@color/colorWhite"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtCustomization1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_7ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:fontFamily="@font/p_light"/>

        <TextView
            android:id="@+id/txtCustomization2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_7ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:fontFamily="@font/p_light"/>

        <TextView
            android:id="@+id/txtCustomization3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_7ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:fontFamily="@font/p_light"/>

        <TextView
            android:id="@+id/txtOutOfStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/colorValidation"
            android:visibility="gone"
            android:text="@string/text_outofstock"
            android:fontFamily="@font/p_light"/>

    </LinearLayout>

</layout>

