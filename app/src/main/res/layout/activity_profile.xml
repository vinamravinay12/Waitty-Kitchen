<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.waitty.kitchen.activity.ProfileActivity"/>

        <variable
            name="clickEvent"
            type="com.waitty.kitchen.activity.ProfileActivity.ClickHandler" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/Cordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yallow_gradiant_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarActionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorNextWelcome"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:text="@string/txt_profile"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/p_medium"/>

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbarActionbar">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_5sdp">

                        <RelativeLayout
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_centerHorizontal="true"
                            android:elevation="@dimen/_6sdp">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/avtar_waiter"
                                app:civ_border_color="@color/colorWhite"
                                app:civ_border_width="@dimen/_5sdp"
                                app:civ_shadow="true"
                                app:civ_shadow_radius="5"
                                app:civ_shadow_color="@color/colorCircleImageShadow" />

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/imvProfileImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/avtar_waiter"
                                app:civ_border_color="@color/colorWhite"
                                app:civ_border_width="@dimen/_5sdp"
                                app:civ_shadow="true"
                                app:civ_shadow_radius="5"
                                app:civ_shadow_color="@color/colorCircleImageShadow" />

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="false"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_45sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_32sdp"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:textColor="@color/colorNextWelcome"
                                    android:textSize="@dimen/_10ssp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:fontFamily="@font/p_semibold"/>

                                <TextView
                                    android:id="@+id/txtKitchenID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorNextWelcome"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_7ssp"
                                    android:fontFamily="@font/p_light"/>

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    style="@style/MyCardViewStyleLogin"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_notifications"
                                        android:textColor="@color/colorNextWelcome"
                                        android:textSize="@dimen/_9ssp"
                                        android:fontFamily="@font/p_regular"
                                        android:background="@color/colorTransparent"
                                        android:drawableStart="@mipmap/notification_icon"
                                        android:drawablePadding="@dimen/_10sdp"/>

                                    <Switch
                                        android:id="@+id/switchNotifications"
                                        android:theme="@style/checkboxYallow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"/>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:onClick="@{clickEvent::privacyPolicyClick}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    style="@style/MyCardViewStyleLogin"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_privacy_policy"
                                        android:textColor="@color/colorNextWelcome"
                                        android:textSize="@dimen/_9ssp"
                                        android:fontFamily="@font/p_regular"
                                        android:background="@color/colorTransparent"
                                        android:drawableStart="@mipmap/privacy_policy_icon"
                                        android:drawableEnd="@mipmap/right_arrow"
                                        android:drawablePadding="@dimen/_10sdp"/>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:onClick="@{clickEvent::termsConditionsClick}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_15sdp"
                                    style="@style/MyCardViewStyleLogin"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/terms_con_settings"
                                        android:textColor="@color/colorNextWelcome"
                                        android:textSize="@dimen/_9ssp"
                                        android:fontFamily="@font/p_regular"
                                        android:background="@color/colorTransparent"
                                        android:drawableStart="@mipmap/term_con_icon"
                                        android:drawableEnd="@mipmap/right_arrow"
                                        android:drawablePadding="@dimen/_10sdp"/>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:onClick="@{clickEvent::logoutClick}"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_25sdp"
                                    style="@style/MyCardViewStyleLogin"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_logout"
                                        android:textColor="@color/colorNextWelcome"
                                        android:textSize="@dimen/_9ssp"
                                        android:fontFamily="@font/p_regular"
                                        android:background="@color/colorTransparent"
                                        android:drawableStart="@mipmap/logout_icon"
                                        android:drawablePadding="@dimen/_10sdp"/>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </ScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>