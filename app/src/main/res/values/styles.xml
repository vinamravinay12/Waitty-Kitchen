<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <!--Loading progress bar style -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorTabItemTextSelected</item>
    </style>

    <!--Animation for popup dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!--text button style-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    // Splash theme

    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="OrderTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OrderTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/OrderTabTextAppearance</item>
    </style>

    <style name="BtnLogin">
        <item name="android:background">@drawable/background_btn_login</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/bwnistageo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorTextTheme">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="android:textColor">@color/colorCountdownTimer</item>
    </style>
    
    <style name="orderTotalTextStyle">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/bwnistageo_regular</item>
        <item name="android:textColor">@color/colorWaiterIdText</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>


</resources>
